{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api",
        "region": "us-central1"  // ¡Consistente con tu servidor!
      },
      {
        "source": "/pago",
        "destination": "/pago.html"
      },
      {
        "source": "/perfil",
        "destination": "/perfil.html"
      },
      {
        "source": "/productos",
        "destination": "/productos.html"
      },
      {
        "source": "/registro",
        "destination": "/registro.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  },
  "functions": {
    "predeploy": [
      "npm --prefix functions run build"
    ],
    "source": "functions",
    "runtime": "nodejs18",
    "region": "us-central1"  // Misma región que tu Firestore
  }
}
